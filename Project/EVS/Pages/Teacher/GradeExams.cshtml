@page
@model EVS.Pages.Teacher.GradeExamsModel
@{
    ViewData["title"] = "GradeExams";
}
@section Sidebar {
    @await Html.PartialAsync("_TeacherSidebar")
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <!-- Exam Selection -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-white fw-bold">Select Exam</div>
                <div class="card-body">
                    <form method="get" class="row g-3 align-items-end">
                        <div class="col-md-8">
                            <label class="form-label">Exam</label>
                            <select name="SelectedExamId" class="form-select" onchange="this.form.submit()">
                                <option value="">-- Select an exam --</option>
                                @foreach (System.Data.DataRow exam in Model.Exams.Rows)
                                {
                                    var isSelected = Model.SelectedExamId.HasValue && 
                                                     Convert.ToInt32(exam["ExamID"]) == Model.SelectedExamId.Value;
                                    <option value="@exam["ExamID"]" selected="@isSelected">
                                        @exam["ExamType"] - @exam["SubjectName"] (@Convert.ToDateTime(exam["ExamDate"]).ToString("MMM dd, yyyy"))
                                    </option>
                                }
                            </select>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

