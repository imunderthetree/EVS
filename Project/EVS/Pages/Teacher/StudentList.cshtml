@page
@model EVS.Pages.Teacher.StudentListModel
@{
    ViewData["Title"] = "Student Directory";
}
@section Sidebar {
    @await Html.PartialAsync("_TeacherSidebar")
}

<div class="container-fluid">
    <h2 class="mb-4">Students</h2>

    <div class="row">
        <!-- MAIN LIST -->
        <div class="col-md-9">
            <div class="row mb-3 g-3">
                <div class="col-sm-4">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <div class="small text-muted">Total Students</div>
                            <h3 class="mb-0">@Model.Students.Rows.Count</h3>
                        </div>
                    </div>
                </div>

                <div class="col-sm-4">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <div class="small text-muted">Grades Represented</div>
                            <h3 class="mb-0">
                                @(Model.Students.Rows.Count > 0 
                                    ? Model.Students.Rows.Cast<System.Data.DataRow>()
                                        .Select(r => r["GradeLevel"]).Distinct().Count() 
                                    : 0)
                            </h3>
                        </div>
                    </div>
                </div>

                <div class="col-sm-4">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <div class="small text-muted">With Guardian</div>
                            <h3 class="mb-0">
                                @(Model.Students.Rows.Cast<System.Data.DataRow>()
                                    .Count(r => r["ParentName"] != DBNull.Value))
                            </h3>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm mb-4">
                <div class="card-header bg-white fw-bold d-flex justify-content-between align-items-center">
                    <span>Student Directory</span>
                    <span class="badge bg-primary">@Model.Students.Rows.Count records</span>
                </div>
                <div class="card-body">
                    <form method="get" class="mb-3 row g-2 align-items-center">
                        <div class="col-md-5">
                            <input asp-for="SearchTerm" class="form-control" 
                                   placeholder="Search by name..." aria-label="Search students" />
                        </div>

                        <div class="col-md-3">
                            <select asp-for="GradeFilter" class="form-select" aria-label="Filter by grade">
                                <option value="">All Grades</option>
                                @for (int i = 1; i <= 12; i++)
                                {
                                    <option value="@i">Grade @i</option>
                                }
                            </select>
                        </div>

                        <div class="col-md-2">
                            <button type="submit" class="btn btn-primary w-100">
                                <i class="fa fa-search me-1"></i> Search
                            </button>
                        </div>

                        <div class="col-md-2">
                            <a href="/Teacher/StudentList" class="btn btn-outline-secondary w-100">Clear</a>
                        </div>
                    </form>

                    @if (Model.Students.Rows.Count > 0)
                    {
                        <div class="table-responsive">
                            <table class="table table-hover table-sm align-middle" aria-label="Student list table">
                                <thead>
                                    <tr>
                                        <th>Student</th>
                                        <th>Student ID</th>
                                        <th>Grade</th>
                                        <th>Guardian</th>
                                        <th class="text-end">Actions</th>
                                    </tr>
                                </thead>

                                <tbody>
                                    @foreach (System.Data.DataRow student in Model.Students.Rows)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="rounded-circle bg-secondary d-flex align-items-center justify-content-center me-2" 
                                                         style="width:36px;height:36px;">
                                                        <i class="fa fa-user text-white"></i>
                                                    </div>
                                                    <div>
                                                        <div class="fw-semibold">@student["FullName"]</div>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>@student["StudentID"]</td>
                                            <td>
                                                <span class="badge bg-info">Grade @student["GradeLevel"]</span>
                                            </td>
                                            <td>@(student["ParentName"] != DBNull.Value ? student["ParentName"] : "—")</td>
                                            <td class="text-end">
                                                <a asp-page="/Teacher/Messages" class="btn btn-sm btn-outline-secondary">
                                                    <i class="fa fa-envelope"></i> Message
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center text-muted py-5">
                            <i class="fa fa-users fa-3x mb-3 opacity-50"></i>
                            <p>No students found.</p>
                            @if (!string.IsNullOrEmpty(Model.SearchTerm) || Model.GradeFilter.HasValue)
                            {
                                <a href="/Teacher/StudentList" class="btn btn-outline-primary btn-sm">Clear filters</a>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- SIDEBAR / QUICK ACTIONS -->
        <div class="col-md-3">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-white fw-bold">Quick Actions</div>
                <div class="card-body">
                    <div class="d-grid mb-2">
                        <a asp-page="/Teacher/Messages" class="btn btn-primary">
                            <i class="fa fa-envelope me-1"></i> Send Message
                        </a>
                    </div>
                    <div class="d-grid">
                        <a asp-page="/Teacher/Dashboard" class="btn btn-outline-secondary">
                            <i class="fa fa-home me-1"></i> Dashboard
                        </a>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm">
                <div class="card-header bg-white fw-bold">Filters</div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="form-label">Grade Level</label>
                        <select class="form-select" onchange="location.href='/Teacher/StudentList?GradeFilter='+this.value">
                            <option value="">All</option>
                            @for (int i = 1; i <= 12; i++)
                            {
                                var isSelected = Model.GradeFilter == i;
                                <option value="@i" selected="@isSelected">Grade @i</option>
                            }
                        </select>
                    </div>

                    <div class="d-grid">
                        <a href="/Teacher/StudentList" class="btn btn-outline-primary">Reset Filters</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
