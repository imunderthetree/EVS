@page
@model EVS.Pages.Teacher.MySubjectsModel
@{
    ViewData["Title"] = "My Subjects";
}
@section Sidebar {
    @await Html.PartialAsync("_TeacherSidebar")
}

<head>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }

        .tabs {
            display: flex;
            gap: 20px;
            margin-bottom: 20px;
            font-weight: bold;
        }

            .tabs div {
            border-bottom: 2px solid purple;
                cursor: pointer;
                padding-bottom: 5px;
                font-size: 16px;
            }

            .tabs .active {
                border-bottom: 2px solid purple;
                font-weight: bold;
            }

        .course-list {
            display: flex;
            gap: 20px;
            flex-wrap: wrap;
            margin-top: 20px;
        }

        .course-card {
            width: 240px;
            border: 1px solid #ddd;
            border-radius: 8px;
            padding: 15px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            background: #fff;
            transition: all 0.3s ease;
        }

            .course-card:hover {
                box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
                transform: scale(1.02);
            }

        .course-img {
            height: 120px;
            background: #b9a9d8;
            border-radius: 6px;
            margin-bottom: 10px;
        }

        .title {
            font-size: 17px;
            font-weight: bold;
            margin-bottom: 5px;
        }

        .info {
            font-size: 14px;
            color: #555;
            margin-bottom: 3px;
        }

        .btn {
            width: 100%;
            padding: 10px;
            border: none;
            border-radius: 6px;
            background: #7c6be8;
            color: white;
            margin-top: 8px;
            cursor: pointer;
            font-size: 14px;
        }

            .btn:hover {
                background: #6a56d2;
            }
    </style>
</head>

<body>
    <h2>Teacher's Courses</h2>

    <!-- Tab Navigation -->
    <div class="tabs">
        <div class="tab" id="all-courses" >All Courses</div>
        <div class="tab" id="ongoing-courses" >Ongoing</div>
        <div class="tab" id="completed-courses"">Completed</div>
    </div>

    <!-- Courses List -->
    <div class="course-list">
        <!-- Course 1 - Ongoing -->
        <div class="course-card ongoing">
            <div class="course-img"></div>
            <div class="title">Mathematics Grade 6</div>
            <div class="info">Total Lessons: 24</div>
            <div class="info">Completed: 12/24</div>
            <button class="btn">View Details</button>
        </div>

        <!-- Course 2 - Ongoing -->
        <div class="course-card ongoing">
            <div class="course-img"></div>
            <div class="title">Science Grade 7</div>
            <div class="info">Total Lessons: 18</div>
            <div class="info">Completed: 5/18</div>
            <button class="btn">View Details</button>
        </div>

        <!-- Course 3 - Completed -->
        <div class="course-card completed">
            <div class="course-img"></div>
            <div class="title">English Literature</div>
            <div class="info">Total Lessons: 30</div>
            <div class="info">Completed: 30/30</div>
            <button class="btn">View Details</button>
        </div>

        <!-- Course 4 - Completed -->
        <div class="course-card completed">
            <div class="course-img"></div>
            <div class="title">History Grade 8</div>
            <div class="info">Total Lessons: 15</div>
            <div class="info">Completed: 15/15</div>
            <button class="btn">View Details</button>
        </div>
    </div>


</body>
