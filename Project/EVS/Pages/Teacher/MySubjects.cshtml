@page
@model EVS.Pages.Teacher.MySubjectsModel
@{
    ViewData["Title"] = "My Subjects";
}
@section Sidebar {
    @await Html.PartialAsync("_TeacherSidebar")
}

<style>
    .subject-list {
        display: flex;
        gap: 20px;
        flex-wrap: wrap;
        margin-top: 20px;
    }

    .subject-card {
        width: 240px;
        border: 1px solid #ddd;
        border-radius: 8px;
        padding: 15px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        background: #fff;
        transition: all 0.3s ease;
    }

    .subject-card:hover {
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        transform: scale(1.02);
    }

    .subject-img {
        height: 120px;
        background: linear-gradient(135deg, #7c6be8 0%, #b9a9d8 100%);
        border-radius: 6px;
        margin-bottom: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .subject-img i {
        font-size: 48px;
        color: white;
        opacity: 0.8;
    }

    .subject-title {
        font-size: 17px;
        font-weight: bold;
        margin-bottom: 5px;
    }

    .subject-info {
        font-size: 14px;
        color: #555;
        margin-bottom: 3px;
    }

    .subject-btn {
        width: 100%;
        padding: 10px;
        border: none;
        border-radius: 6px;
        background: #7c6be8;
        color: white;
        margin-top: 8px;
        cursor: pointer;
        font-size: 14px;
        text-decoration: none;
        display: block;
        text-align: center;
    }

    .subject-btn:hover {
        background: #6a56d2;
        color: white;
    }
</style>

<div class="container-fluid">
    <h2 class="mb-4">My Subjects</h2>

    <!-- Summary Cards -->
    <div class="row mb-4 g-3">
        <div class="col-sm-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <div class="text-muted small">Total Subjects</div>
                    <h3 class="mb-0">@Model.Subjects.Rows.Count</h3>
                </div>
            </div>
        </div>
    </div>

    <!-- Subjects List -->
    @if (Model.Subjects.Rows.Count > 0)
    {
        <div class="subject-list">
            @foreach (System.Data.DataRow subject in Model.Subjects.Rows)
            {
                <div class="subject-card">
                    <div class="subject-img">
                        <i class="fa fa-book"></i>
                    </div>
                    <div class="subject-title">@subject["SubjectName"]</div>
                    <div class="subject-info">Subject ID: @subject["SubjectID"]</div>
                    <a href="/Teacher/Assignments" class="subject-btn">View Assignments</a>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="fa fa-info-circle me-2"></i>
            No subjects assigned to you yet. Please contact the administrator.
        </div>
    }
</div>
