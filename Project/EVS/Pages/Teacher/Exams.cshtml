@page
@model EVS.Pages.Teacher.ExamsModel
@using System.Linq
@{
    ViewData["Title"] = "Exams";
}
@section Sidebar {
    @await Html.PartialAsync("_TeacherSidebar")
}

<div class="container-fluid">
    <h2 class="mb-4">Exams</h2>

    <div class="row">
        <!-- MAIN CONTENT -->
        <div class="col-md-9">
            <div class="row mb-3 g-3">
                <div class="col-sm-4">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <div class="small-text text-muted">Total Exams</div>
                            <h3 class="mb-0">@Model.Exams.Rows.Count</h3>
                        </div>
                    </div>
                </div>

                <div class="col-sm-4">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <div class="small-text text-muted">Upcoming Exams</div>
                            <h3 class="mb-0">@(Model.Exams.Rows.Cast<System.Data.DataRow>().Count(r => Convert.ToDateTime(r["ExamDate"]) > DateTime.Today))</h3>
                        </div>
                    </div>
                </div>

                <div class="col-sm-4">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <div class="small-text text-muted">Subjects</div>
                            <h3 class="mb-0">@Model.Subjects.Rows.Count</h3>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm mb-4">
                <div class="card-header bg-white fw-bold">Exam Schedule</div>
                <div class="card-body">
                    <div class="mb-3 row g-2 align-items-center">
                        <div class="col-md-6">
                            <input class="form-control" placeholder="Search by exam title or subject" aria-label="Search exams" />
                        </div>

                        <div class="col-md-4">
                            <select class="form-select" aria-label="Filter by subject">
                                <option selected>All Subjects</option>
                                @foreach (System.Data.DataRow subject in Model.Subjects.Rows)
                                {
                                    <option value="@subject["SubjectID"]">@subject["SubjectName"]</option>
                                }
                            </select>
                        </div>

                        <div class="col-md-2 text-end">
                            <button class="btn btn-outline-secondary">Export</button>
                        </div>
                    </div>

                    <div class="table-responsive">
                        <table class="table table-hover table-sm align-middle" aria-label="Exam schedule table">
                            <thead>
                                <tr>
                                    <th>Exam Type</th>
                                    <th>Subject</th>
                                    <th>Date</th>
                                    <th class="text-end">Actions</th>
                                </tr>
                            </thead>

                            <tbody>
                                @if (Model.Exams.Rows.Count > 0)
                                {
                                    @foreach (System.Data.DataRow exam in Model.Exams.Rows)
                                    {
                                        var examDate = Convert.ToDateTime(exam["ExamDate"]);
                                        var isPast = examDate < DateTime.Today;
                                        <tr>
                                            <td>
                                                <div class="fw-semibold">@exam["ExamType"]</div>
                                            </td>
                                            <td>@exam["SubjectName"]</td>
                                            <td>@examDate.ToString("MMM dd, yyyy")</td>
                                            <td class="text-end">
                                                @if (isPast)
                                                {
                                                    <a asp-page="/Teacher/GradeExams" class="btn btn-sm btn-outline-secondary">Grade</a>
                                                }
                                                else
                                                {
                                                    <button class="btn btn-sm btn-outline-primary">View</button>
                                                }
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="4" class="text-center text-muted">No exams scheduled.</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- RIGHT COLUMN: QUICK ACTIONS -->
        <div class="col-md-3">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-white fw-bold">Quick Actions</div>
                <div class="card-body">
                    <div class="d-grid mb-2">
                        <a asp-page="/Teacher/GradeExams" class="btn btn-primary">Grade Exams</a>
                    </div>
                    <div class="d-grid">
                        <a asp-page="/Teacher/MySubjects" class="btn btn-outline-secondary">My Subjects</a>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm">
                <div class="card-header bg-white fw-bold">Filters</div>
                <div class="card-body">
                    <div class="mb-2">
                        <label class="form-label">From</label>
                        <input type="date" class="form-control" />
                    </div>

                    <div class="mb-2">
                        <label class="form-label">To</label>
                        <input type="date" class="form-control" />
                    </div>

                    <div class="d-grid">
                        <button class="btn btn-outline-primary">Apply Filters</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>