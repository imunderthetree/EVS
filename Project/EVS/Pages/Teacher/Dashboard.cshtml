@page
@model EVS.Pages.Teacher.DashboardModel
@{
    ViewData["Title"] = "Teacher Dashboard";
}
@section Sidebar {
    @await Html.PartialAsync("_TeacherSidebar")
}

<style>
    body {
        font-family: Arial;
        background: #f4f7fb;
        margin: 0;
    }

    .main {
        padding: 20px;
    }

    .card {
        background: white;
        padding: 15px;
        border-radius: 6px;
        border: 1px solid #e2e2e2;
        margin-bottom: 20px;
    }

    .section-title {
        font-size: 16px;
        font-weight: bold;
        margin-bottom: 10px;
    }

    .row {
        display: flex;
        gap: 20px;
    }

    .col {
        flex: 1;
    }

    .small-text {
        color: #777;
        font-size: 13px;
    }

    .badge {
        padding: 3px 8px;
        font-size: 12px;
        border-radius: 4px;
    }

    .green {
        background: #c7f5d7;
    }

    .red {
        background: #ffc7c7;
    }

    .blue {
        background: #d8e7ff;
    }

    .profile-box {
        text-align: center;
        padding: 20px;
    }

    .profile-img {
        width: 70px;
        height: 70px;
        border-radius: 50%;
        background: #ddd;
        margin: 0 auto 10px;
    }

    .list-item {
        padding: 10px 0;
        border-bottom: 1px solid #eee;
    }

        .list-item:last-child {
            border-bottom: none;
        }

    .quick-actions {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 10px;
    }

        .quick-actions .btn {
            display: flex;
            align-items: center;
            gap: 10px;
            justify-content: center;
            padding: 10px 12px;
        }

        .quick-actions .fa-fw {
            width: 18px;
            text-align: center;
        }
</style>

<div class="main">
    @if (!string.IsNullOrEmpty(Model.Message))
    {
        <div class="alert alert-success">@Model.Message</div>
    }

    <!-- TOP ROW -->
    <div class="row">
        <!-- Today's Classes -->
        <div class="col">
            <div class="card">
                <div class="section-title">Today's Classes</div>
                <h2>@Model.TodayClassesCount</h2>
                <div class="small-text">Active sessions</div>
                <span class="badge blue">Ongoing</span>
            </div>
        </div>

        <!-- Assignments to Grade -->
        <div class="col">
            <div class="card">
                <div class="section-title">Assignments to Grade</div>
                <h2>@Model.PendingAssignmentsCount</h2>
                <span class="badge red">Pending</span>
                <div class="small-text">Requires grading</div>
            </div>
        </div>

        <!-- Teacher Profile -->
        <div class="col">
            <div class="card profile-box">
                <div class="profile-img"></div>
                <h3>@Model.TeacherName</h3>
                <div class="small-text">Teacher ID: @Model.TeacherId</div>
                <div class="small-text">Subjects: @Model.SubjectCount</div>
            </div>
        </div>
    </div>

    <!-- MIDDLE ROW -->
    <div class="row">
        <!-- Upcoming Lessons -->
        <div class="col">
            <div class="card">
                <div class="section-title">Today's Schedule</div>
                @if (Model.TodaySchedule.Rows.Count > 0)
                {
                    @foreach (System.Data.DataRow row in Model.TodaySchedule.Rows)
                    {
                        <div class="list-item">
                            @row["SubjectName"] – @row["ClassroomName"]
                            <div class="small-text">@row["StartTime"] - @row["EndTime"]</div>
                        </div>
                    }
                }
                else
                {
                    <div class="text-muted">No classes scheduled for today</div>
                }
            </div>
        </div>

        <!-- Latest Messages -->
        <div class="col">
            <div class="card">
                <div class="section-title">Recent Messages</div>
                @if (Model.RecentMessages.Rows.Count > 0)
                {
                    @foreach (System.Data.DataRow msg in Model.RecentMessages.Rows.Cast<System.Data.DataRow>().Take(3))
                    {
                        <div class="list-item">
                            @msg["MessageContent"]?.ToString()?.Substring(0, Math.Min(50, msg["MessageContent"].ToString()!.Length))...
                            <div class="small-text">@Convert.ToDateTime(msg["SentDate"]).ToString("MMM dd")</div>
                        </div>
                    }
                }
                else
                {
                    <div class="text-muted">No recent messages</div>
                }
            </div>
        </div>
    </div>

    <!-- ANNOUNCEMENTS -->
    <div class="card">
        <div class="section-title">Recent Announcements</div>
        @if (Model.RecentAnnouncements.Rows.Count > 0)
        {
            @foreach (System.Data.DataRow ann in Model.RecentAnnouncements.Rows.Cast<System.Data.DataRow>().Take(3))
            {
                <div class="list-item">
                    @ann["Title"]
                    <div class="small-text">@Convert.ToDateTime(ann["DatePosted"]).ToString("MMM dd, yyyy")</div>
                </div>
            }
        }
        else
        {
            <div class="text-muted">No recent announcements</div>
        }
    </div>

    <!-- CREATE ANNOUNCEMENT -->
    <div class="card">
        <div class="section-title">Create Announcement</div>
        <form method="post" asp-page-handler="CreateAnnouncement">
            <div class="mb-3">
                <label asp-for="AnnouncementTitle" class="form-label">Title</label>
                <input asp-for="AnnouncementTitle" class="form-control" placeholder="Announcement title" />
                <span asp-validation-for="AnnouncementTitle" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="AnnouncementContent" class="form-label">Content</label>
                <textarea asp-for="AnnouncementContent" class="form-control" rows="4" placeholder="Announcement content"></textarea>
                <span asp-validation-for="AnnouncementContent" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">
                <i class="fa-solid fa-bullhorn fa-fw"></i> Post Announcement
            </button>
        </form>
    </div>

    <!-- QUICK ACTIONS -->
    <div class="card">
        <div class="section-title">Quick Actions</div>
        <div class="quick-actions">
            <a asp-page="/Teacher/Assignments" class="btn btn-outline-primary">
                <i class="fa-solid fa-file-pen fa-fw"></i>
                Assignments
            </a>

            <a asp-page="/Teacher/GradeAssignments" class="btn btn-outline-primary">
                <i class="fa-solid fa-pen-nib fa-fw"></i>
                Grade Assignments
            </a>

            <a asp-page="/Teacher/GradeExams" class="btn btn-outline-primary">
                <i class="fa-solid fa-marker fa-fw"></i>
                Grade Exams
            </a>

            <a asp-page="/Teacher/StudentList" class="btn btn-outline-primary">
                <i class="fa-solid fa-users fa-fw"></i>
                View Students
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
