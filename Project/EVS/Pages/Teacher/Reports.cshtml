@page
@model EVS.Pages.Teacher.ReportsModel
@{
    ViewData["Title"] = "Student Reports";
}
@section Sidebar {
    @await Html.PartialAsync("_TeacherSidebar")
}

<div class="container-fluid">
    <h2 class="mb-4">Student Reports</h2>

    <div class="row">
        <div class="col-md-9">
            <div class="row mb-3 g-3">
                <div class="col-sm-4">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <div class="small text-muted">Total Students</div>
                            <h3 class="mb-0">@Model.TotalStudents</h3>
                        </div>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <div class="small text-muted">Showing</div>
                            <h3 class="mb-0">@Model.Students.Rows.Count</h3>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm mb-4">
                <div class="card-header bg-white fw-bold">Students Directory</div>
                <div class="card-body">
                    <form method="get" class="mb-3 row g-2 align-items-center">
                        <div class="col-md-4">
                            <input asp-for="SearchTerm" class="form-control" placeholder="Search by name..." />
                        </div>
                        <div class="col-md-3">
                            <select asp-for="GradeFilter" class="form-select">
                                <option value="">All Grades</option>
                                @for (int i = 1; i <= 12; i++)
                                {
                                    <option value="@i">Grade @i</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-2">
                            <button type="submit" class="btn btn-primary">Search</button>
                        </div>
                        <div class="col-md-3 text-end">
                            <a asp-page-handler="ExportCsv" class="btn btn-outline-secondary">Export CSV</a>
                        </div>
                    </form>

                    <div class="table-responsive">
                        <table class="table table-hover table-sm align-middle">
                            <thead>
                                <tr>
                                    <th>Student</th>
                                    <th>Student ID</th>
                                    <th>Grade</th>
                                    <th>Parent/Guardian</th>
                                    <th class="text-end">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Students.Rows.Count > 0)
                                {
                                    @foreach (System.Data.DataRow row in Model.Students.Rows)
                                    {
                                        <tr>
                                            <td>
                                                <div class="fw-semibold">@row["FullName"]</div>
                                            </td>
                                            <td>@row["StudentID"]</td>
                                            <td>Grade @row["GradeLevel"]</td>
                                            <td>@(row["ParentName"] != DBNull.Value ? row["ParentName"] : "N/A")</td>
                                            <td class="text-end">
                                                <button class="btn btn-sm btn-outline-primary">View</button>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="5" class="text-center text-muted">No students found</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow-sm">
                <div class="card-header bg-white fw-bold">Quick Actions</div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a href="/Teacher/GradeAssignments" class="btn btn-primary">Grade Assignments</a>
                        <a href="/Teacher/StudentList" class="btn btn-outline-secondary">Student List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
