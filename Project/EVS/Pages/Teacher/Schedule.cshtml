@page
@model EVS.Pages.Teacher.ScheduleModel
@using System.Linq

@{
    ViewData["Title"] = "Teacher Schedule";
}
@section Sidebar {
    @await Html.PartialAsync("_TeacherSidebar")
}

<style>
    .schedule-cell {
        min-height: 80px;
        vertical-align: middle;
    }

    .schedule-badge {
        padding: 5px 15px;
        border-radius: 5px;
        color: white;
        display: inline-block;
    }

    .bg-purple {
        background-color: #7c6be8;
    }

    .bg-blue {
        background-color: #4a90d9;
    }

    .bg-green {
        background-color: #28a745;
    }

    .bg-yellow {
        background-color: #ffc107;
        color: #333;
    }

    .bg-sky {
        background-color: #17a2b8;
    }

    .bg-orange {
        background-color: #fd7e14;
    }

    .text-light-gray {
        color: #999;
    }

    .font-size13 {
        font-size: 13px;
    }

    .font-size14 {
        font-size: 14px;
    }

    .margin-10px-top {
        margin-top: 10px;
    }
</style>

<div class="container-fluid">
    <h2 class="mb-4">My Schedule</h2>

    @if (Model.TotalClasses > 0)
    {
        var days = new[] { "Monday", "Tuesday", "Wednesday", "Thursday", "Friday" };

        <div class="card shadow-sm">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered text-center">
                        <thead>
                            <tr class="bg-light">
                                <th class="text-uppercase">Time</th>
                                @foreach (var day in days)
                                {
                                    <th class="text-uppercase">@day</th>
                                }
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var slot in Model.TimeSlots)
                            {
                                <tr>
                                    <td class="align-middle schedule-cell">
                                        <strong>@slot.Start</strong>
                                    </td>
                                    @foreach (var day in days)
                                    {
                                        var entry = Model.ScheduleByDay.ContainsKey(day)
                                        ? Model.ScheduleByDay[day].FirstOrDefault(r => r["StartTime"].ToString() == slot.StartStr)
                                        : null;

                                        if (entry != null)
                                        {
                                            var colors = new[] { "bg-purple", "bg-blue", "bg-green", "bg-sky", "bg-orange" };
                                            var colorIndex = Math.Abs(entry["SubjectName"].ToString()!.GetHashCode()) % colors.Length;
                                            <td class="schedule-cell">
                                                <span class="schedule-badge @colors[colorIndex]">@entry["SubjectName"]</span>
                                                <div class="margin-10px-top font-size14">@entry["StartTime"] - @entry["EndTime"]</div>
                                                <div class="font-size13 text-light-gray">@entry["ClassroomName"]</div>
                                            </td>
                                        }
                                        else
                                        {
                                            <td class="schedule-cell bg-light"></td>
                                        }
                                    }
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Schedule Summary -->
        <div class="row mt-4">
            <div class="col-md-4">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <div class="text-muted small">Total Classes</div>
                        <h3 class="mb-0">@Model.TotalClasses</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <div class="text-muted small">Days with Classes</div>
                        <h3 class="mb-0">@Model.DaysWithClasses</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <div class="text-muted small">Unique Subjects</div>
                        <h3 class="mb-0">@Model.UniqueSubjects</h3>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="fa fa-info-circle me-2"></i>
            No schedule available. Please contact the administrator.
        </div>
    }
</div>
