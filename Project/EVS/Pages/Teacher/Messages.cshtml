@page
@model EVS.Pages.Teacher.MessagesModel
@{
    ViewData["Title"] = "Messages";
}
@section Sidebar {
    @await Html.PartialAsync("_TeacherSidebar")
}

<div class="container-fluid">
    <h2 class="mb-4">Messages</h2>

    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="alert alert-success">@Model.SuccessMessage</div>
    }

    <div class="row">
        <div class="col-md-8">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-white fw-bold">Message History</div>
                <div class="card-body">
                    @if (Model.Messages.Rows.Count > 0)
                    {
                        <div class="list-group list-group-flush">
                            @foreach (System.Data.DataRow msg in Model.Messages.Rows)
                            {
                                var isSent = Convert.ToInt32(msg["SenderID"]) == Model.TeacherId;
                                <div class="list-group-item @(isSent ? "bg-light" : "")">
                                    <div class="d-flex justify-content-between">
                                        <strong>@(isSent ? "You" : "Student #" + msg["SenderID"])</strong>
                                        <small class="text-muted">
                                            @Convert.ToDateTime(msg["SentDate"]).ToString("MMM dd, yyyy hh:mm tt")
                                        </small>
                                    </div>
                                    <p class="mb-0 mt-1">@msg["MessageContent"]</p>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">No messages yet.</p>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-header bg-white fw-bold">Send Message</div>
                <div class="card-body">
                    <form method="post" asp-page-handler="Send">
                        <div class="mb-3">
                            <label class="form-label">To (Student)</label>
                            <select asp-for="ReceiverId" class="form-select" required>
                                <option value="">Select student...</option>
                                @foreach (System.Data.DataRow student in Model.Students.Rows)
                                {
                                    <option value="@student["StudentID"]">@student["FullName"]</option>
                                }
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Message</label>
                            <textarea asp-for="MessageContent" class="form-control" rows="4" 
                                      placeholder="Type your message..." required></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="fa fa-paper-plane me-1"></i> Send
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
