@page
@model LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <div class="card shadow">
                <div class="card-header text-center bg-primary text-white">
                    <h3>Login</h3>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="mb-3">
                            <label class="form-label d-block">Login as:</label>
                            <div class="btn-group w-100" role="group" aria-label="Account type selection">
                                <input type="radio" class="btn-check" asp-for="AccountType" value="Admin" id="typeAdmin" autocomplete="off">
                                <label class="btn btn-outline-primary" for="typeAdmin">Admin</label>

                                <input type="radio" class="btn-check" asp-for="AccountType" value="Teacher" id="typeTeacher" autocomplete="off">
                                <label class="btn btn-outline-primary" for="typeTeacher">Teacher</label>

                                <input type="radio" class="btn-check" asp-for="AccountType" value="Student" id="typeStudent" autocomplete="off">
                                <label class="btn btn-outline-primary" for="typeStudent">Student</label>

                                <input type="radio" class="btn-check" asp-for="AccountType" value="Parent" id="typeParent" autocomplete="off">
                                <label class="btn btn-outline-primary" for="typeParent">Parent</label>
                            </div>
                            <span asp-validation-for="AccountType" class="text-danger d-block mt-1"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Username" class="form-label">Username / Email</label>
                            <input asp-for="Username" class="form-control" placeholder="Enter username or email" />
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Password" class="form-label">Password</label>
                            <input asp-for="Password" type="password" class="form-control" placeholder="Enter password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary w-100">Login</button>
                        <div class="mt-3 text-center text-danger">
                            @Model.ErrorMessage
                        </div>
                        <div class="mt-2 text-center">
                            <a asp-page="/Account/ForgotPassword">Forgot Password?</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>