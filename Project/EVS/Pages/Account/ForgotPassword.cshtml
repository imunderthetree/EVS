@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot Password";
}

<div class="card mx-auto" style="max-width:420px;">
    <div class="card-header text-center bg-warning text-white">
        <h3>Forgot Password</h3>
    </div>
    <div class="card-body">
        <form method="post" id="forgotForm" novalidate>
            <div class="mb-3">
                <label asp-for="Email" class="form-label">Email Address</label>
                <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <button id="submitBtn" type="submit" class="btn btn-primary" aria-live="polite">
                <span id="btnSpinner" style="display:none; width:1rem; height:1rem; border:2px solid rgba(255,255,255,0.6); border-top-color:transparent; border-radius:50%; display:inline-block; vertical-align:middle; margin-right:.5rem; animation: spin 700ms linear infinite;"></span>
                <span id="btnText">Send Recovery Code</span>
            </button>

            <div class="mt-3" role="status" aria-live="polite">
                @if (!string.IsNullOrEmpty(Model.Message))
                {
                    <div class="alert">@Model.Message</div>
                }
            </div>

            <div class="mt-2 text-center">
                <a asp-page="/Account/Login">Back to Login</a>
            </div>
        </form>
    </div>
</div>
