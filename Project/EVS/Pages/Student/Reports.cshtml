@page
@model EVS.Pages.Student.ReportsModel
@{
    ViewData["Title"] = "My Report Card";
}
@section Sidebar {
    @await Html.PartialAsync("_StudentSidebar")
}

<div class="container-fluid">
    <div class="card shadow-sm">
        <div class="card-header bg-white">
            <div class="d-flex justify-content-between align-items-center">
                <h4 class="mb-0">Student Report Card</h4>
                <div>
                    <a asp-page-handler="Csv" class="btn btn-sm btn-outline-primary">Download CSV</a>
                    <button class="btn btn-sm btn-outline-secondary" onclick="window.print()">Print</button>
                </div>
            </div>
        </div>
        <div class="card-body">
            <!-- Student Info -->
            <div class="row mb-4">
                <div class="col-md-6">
                    <h6 class="text-muted">Student Information</h6>
                    <p class="mb-1"><strong>Name:</strong> @Model.StudentName</p>
                    <p class="mb-1"><strong>School Year:</strong> 2024–2025</p>
                </div>
                <div class="col-md-6">
                    <h6 class="text-muted">Attendance Summary</h6>
                    <p class="mb-1"><strong>Days Present:</strong> @Model.AttendancePresent</p>
                    <p class="mb-1"><strong>Days Absent:</strong> @Model.AttendanceAbsent</p>
                </div>
            </div>

            <!-- Grades Table -->
            <h6 class="text-muted mb-3">Academic Performance</h6>
            @if (Model.Grades.Rows.Count > 0)
            {
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <thead class="table-light">
                            <tr>
                                <th>Subject</th>
                                <th>Assignment</th>
                                <th class="text-center">Grade</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (System.Data.DataRow row in Model.Grades.Rows)
                            {
                                <tr>
                                    <td>@row["SubjectName"]</td>
                                    <td>@row["AssignmentTitle"]</td>
                                    <td class="text-center">
                                        @(row["Grade"] != DBNull.Value ? row["Grade"] : "Not Graded")
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <p class="text-muted">No grades recorded yet.</p>
            }

            <!-- Grading Scale -->
            <div class="row mt-4">
                <div class="col-md-6">
                    <h6 class="text-muted">Grading Scale</h6>
                    <ul class="small">
                        <li>A: 90–100%</li>
                        <li>B: 80–89%</li>
                        <li>C: 70–79%</li>
                        <li>D: 60–69%</li>
                        <li>F: Below 60%</li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="card-footer text-muted text-center small">
            Generated by School System • This is an official student report
        </div>
    </div>
</div>