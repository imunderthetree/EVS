@page
@model EVS.Pages.Student.DashboardModel
@{
    ViewData["Title"] = "Dashboard";
}
@section Sidebar {
    @await Html.PartialAsync("_StudentSidebar")
}
<h2>Student Dashboard</h2>
<div class="row mb-4">
    <div class="col-md-6">
        <h4>Enrolled Courses</h4>
        @if (Model.EnrolledCourses != null && Model.EnrolledCourses.Count > 0)
        {
            <ul class="list-group">
            @foreach (var c in Model.EnrolledCourses)
            {
                <li class="list-group-item">
                    <strong>@c.Name</strong> <span class="text-muted">(@c.Teacher)</span>
                    <a href="#" class="btn btn-sm btn-outline-primary float-end">Open</a>
                </li>
            }
            </ul>
        }
        else
        {
            <div>No courses enrolled.</div>
        }
    </div>
    <div class="col-md-6">
        <h4>Upcoming Tasks</h4>
        @if (Model.UpcomingTasks != null && Model.UpcomingTasks.Count > 0)
        {
            <ul class="list-group">
            @foreach (var t in Model.UpcomingTasks)
            {
                <li class="list-group-item">
                    <span class="badge bg-info">@t.Type</span> <strong>@t.Title</strong>
                    <span class="text-muted">Due: @t.DueDate.ToString("g")</span>
                    <a href="#" class="btn btn-sm btn-outline-success float-end">View</a>
                </li>
            }
            </ul>
        }
        else
        {
            <div>No upcoming tasks.</div>
        }
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <h4>Quick Access</h4>
        @if (Model.QuickLinks != null && Model.QuickLinks.Count > 0)
        {
            <div class="btn-group">
            @foreach (var link in Model.QuickLinks)
            {
                <a href="@link.Url" class="btn btn-outline-secondary">@link.Label</a>
            }
            </div>
        }
    </div>
</div>
