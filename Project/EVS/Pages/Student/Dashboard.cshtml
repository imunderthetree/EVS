@page
@model EVS.Pages.Student.DashboardModel
@{
    ViewData["Title"] = "Student Dashboard";
}

@section Sidebar {
    @await Html.PartialAsync("_StudentSidebar")
}

<div class="container-fluid">
    <h2 class="mb-4">Dashboard</h2>

    <!-- Attendance Summary -->
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-white fw-bold">Attendance Summary</div>
        <div class="card-body">
            @if (Model.AttendanceSummary.Any())
            {
                <div class="row">
                    @foreach (var item in Model.AttendanceSummary)
                    {
                        <div class="col-md-3 text-center">
                            <h4>@item.Value</h4>
                            <p class="text-muted">@item.Key</p>
                        </div>
                    }
                </div>
            }
            else
            {
                <p class="text-muted">No attendance data available.</p>
            }
        </div>
    </div>

    <!-- Recent Announcements -->
    <div class="card shadow-sm">
        <div class="card-header bg-white fw-bold">Recent Announcements</div>
        <div class="card-body">
            @if (Model.RecentAnnouncements.Rows.Count > 0)
            {
                @foreach (System.Data.DataRow row in Model.RecentAnnouncements.Rows)
                {
                    <div class="border-bottom pb-2 mb-2">
                        <strong>@row["Title"]</strong>
                        <p class="mb-0 text-muted small">@row["Content"]</p>
                    </div>
                }
            }
            else
            {
                <p class="text-muted">No announcements.</p>
            }
        </div>
    </div>
</div>
