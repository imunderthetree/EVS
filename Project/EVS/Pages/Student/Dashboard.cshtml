@page
@model EVS.Pages.Student.DashboardModel
@{
    ViewData["Title"] = "Student Dashboard";
}

<div class="content">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <div class="profile-user-box card-box bg-custom">
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="media-body text-white">
                                <h4 class="mt-1 mb-1 font-18">Johnathan Doe</h4>
                                <p class="font-13 text-light">Grade: 10</p>
                                <p class="text-light mb-0">Math, Science, English</p>
                            </div>
                        </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-xl-4">
                <!-- Personal Information -->
                <div class="card-box">
                    <h4 class="header-title mt-0">Student Information</h4>
                    <div class="panel-body">
                        <p class="text-muted font-13">Hello, I'm Johnathan Doe, a Grade 10 student. I am passionate about learning and improving my knowledge in Math, Science, and English. I aim to excel in my studies and participate actively in school activities.</p>
                        <hr>
                        <div class="text-left">
                            <p class="text-muted font-13"><strong>Full Name :</strong> <span class="m-l-15">Johnathan Doe</span></p>
                            <p class="text-muted font-13"><strong>Grade :</strong><span class="m-l-15">10</span></p>
                            <p class="text-muted font-13"><strong>Email :</strong> <span class="m-l-15">johnathan.doe@example.com</span></p>
                            <p class="text-muted font-13"><strong>School :</strong> <span class="m-l-15">Greenwood High School</span></p>
                        </div>
                    </div>
                </div>
                <!-- Personal Information -->

                <div class="card-box ribbon-box">
                    <div class="ribbon ribbon-primary">Messages</div>
                    <div class="clearfix"></div>
                    <div class="inbox-widget">
                        <a href="#">
                            <div class="inbox-item">
                                <div class="inbox-item-img"><img src="https://bootdey.com/img/Content/avatar/avatar2.png" class="rounded-circle" alt=""></div>
                                <p class="inbox-item-author">Mrs. Smith</p>
                                <p class="inbox-item-text">Your Math test is on Monday, don't forget to review Chapter 4!</p>
                                <p class="inbox-item-date">
                                    <button type="button" class="btn btn-icon btn-sm waves-effect waves-light btn-success">Reply</button>
                                </p>
                            </div>
                        </a>
                        <a href="#">
                            <div class="inbox-item">
                                <div class="inbox-item-img"><img src="https://bootdey.com/img/Content/avatar/avatar3.png" class="rounded-circle" alt=""></div>
                                <p class="inbox-item-author">Mr. Johnson</p>
                                <p class="inbox-item-text">Great job on your Science project!</p>
                                <p class="inbox-item-date">
                                    <button type="button" class="btn btn-icon btn-sm waves-effect waves-light btn-success">Reply</button>
                                </p>
                            </div>
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-xl-8">
                <div class="row">
                    <div class="col-sm-4">
                        <div class="card-box tilebox-one">
                            <i class="icon-pencil float-right text-muted"></i>
                            <h6 class="text-muted text-uppercase mt-0">Assignments</h6>
                            <h2 class="" data-plugin="counterup">5</h2><span class="badge badge-custom">Pending</span><span class="text-muted">This Week</span>
                        </div>
                    </div>
                    <!-- end col -->
                    <div class="col-sm-2">
                        <div class="card-box tilebox-one">
                            <i class="icon-graduation float-right text-muted"></i>
                            <h6 class="text-muted text-uppercase mt-0">Overall Grade</h6>
                            <h2 class="" data-plugin="counterup">88%</h2><span class="badge badge-custom">Good</span><span class="text-muted">Current Semester</span>
                        </div>
                    </div>
                    <!-- end col -->
                </div>
                <!-- end row -->

                <div class="card-box">
                    <h4 class="header-title mt-0 mb-3">Current Subjects</h4>
                    <div class="">
                        <div class="">
                            <h5 class="text-custom">Mathematics</h5>
                            <p class="mb-0">Algebra, Geometry, Calculus</p>
                            <p><b>2025-2026</b></p>
                        </div>
                        <hr>
                        <div class="">
                            <h5 class="text-custom">Science</h5>
                            <p class="mb-0">Physics, Chemistry, Biology</p>
                                <p><b>2025-2026</b></p>
                        </div>
                        <hr>
                        <div class="">
                            <h5 class="text-custom">English</h5>
                            <p class="mb-0">Literature, Grammar, Writing</p>
                                <p><b>2025-2026</b></p>
                        </div>
                    </div>
                </div>

                <div class="card-box">
                    <h4 class="header-title mb-3">Upcoming Assignments</h4>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Assignment</th>
                                    <th>Due Date</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>1</td>
                                    <td>Math Test - Algebra</td>
                                    <td>12/12/2025</td>
                                    <td><span class="label label-info">Pending</span></td>
                                </tr>
                                <tr>
                                    <td>2</td>
                                    <td>Science Project - Chemistry</td>
                                    <td>15/12/2025</td>
                                    <td><span class="label label-success">In Progress</span></td>
                                </tr>
                                <tr>
                                    <td>3</td>
                                    <td>English Essay - Literature</td>
                                    <td>18/12/2025</td>
                                    <td><span class="label label-warning">Coming Soon</span></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
