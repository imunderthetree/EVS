@page
@model EVS.Pages.Student.DashboardModel
@{
    Layout = "_Layout";
}

@section Sidebar {
    <partial name="_StudentSidebar" />
}

<!-- Student Dashboard UI (UI-only, no logic) -->
<div class="container-fluid py-4">
    <div class="row g-4">
        <!-- Main content -->
        <div class="col-12 col-lg-9">
            <!-- Welcome -->
            <div class="card mb-4">
                <div class="card-body d-flex flex-column flex-md-row justify-content-between align-items-start gap-3">
                    <div>
                        <h2 class="h5 mb-1">Welcome back, Student</h2>
                        <p class="text-muted mb-0">Here's a summary of your current activity and upcoming items.</p>
                    </div>
                    <div class="text-md-end">
                        <small class="text-muted">Dashboard snapshot</small>
                    </div>
                </div>
            </div>

            <!-- Snapshot cards -->
            <div class="row g-3 mb-4">
                <div class="col-6 col-md-3">
                    <div class="card h-100">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start">
                                <div>
                                    <small class="text-muted">GPA</small>
                                    <h3 class="mb-0">3.85</h3>
                                </div>
                                <div class="text-success align-self-center">▲ 0.05</div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-6 col-md-3">
                    <div class="card h-100">
                        <div class="card-body">
                            <small class="text-muted">Credits</small>
                            <h3 class="mb-0">72</h3>
                        </div>
                    </div>
                </div>

                <div class="col-6 col-md-3">
                    <div class="card h-100">
                        <div class="card-body">
                            <small class="text-muted">Assignments Due</small>
                            <h3 class="mb-0">2</h3>
                        </div>
                    </div>
                </div>

                <div class="col-6 col-md-3">
                    <div class="card h-100">
                        <div class="card-body">
                            <small class="text-muted">Upcoming Exams</small>
                            <h3 class="mb-0">1</h3>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Upcoming assignments & exams -->
            <div class="row g-3">
                <div class="col-12 col-md-7">
                    <div class="card mb-3">
                        <div class="card-header">
                            <strong>Upcoming Assignments</strong>
                            <span class="text-muted ms-2">(static sample)</span>
                        </div>
                        <div class="list-group list-group-flush">
                            <div class="list-group-item d-flex justify-content-between align-items-start">
                                <div>
                                    <div class="fw-semibold">Math - Homework 8</div>
                                    <small class="text-muted">Due: Sep 20, 2025 — Algebra practice</small>
                                </div>
                                <div class="text-end">
                                    <span class="badge bg-warning text-dark">Due in 3 days</span>
                                </div>
                            </div>

                            <div class="list-group-item d-flex justify-content-between align-items-start">
                                <div>
                                    <div class="fw-semibold">History - Essay</div>
                                    <small class="text-muted">Due: Sep 24, 2025 — 1000 words</small>
                                </div>
                                <div class="text-end">
                                    <span class="badge bg-secondary">Open</span>
                                </div>
                            </div>

                            <div class="list-group-item text-center text-muted">
                                No more upcoming assignments (sample).
                            </div>
                        </div>
                    </div>

                    <div class="card">
                        <div class="card-header">
                            <strong>Upcoming Exams</strong>
                        </div>
                        <div class="card-body">
                            <div class="mb-3">
                                <div class="fw-semibold">Physics Midterm</div>
                                <small class="text-muted">Oct 05, 2025 — Room 204, 09:00 AM</small>
                            </div>
                            <div class="text-muted small">Check the Exams page for full schedule and instructions.</div>
                        </div>
                    </div>
                </div>

                <!-- Announcements -->
                <div class="col-12 col-md-5">
                    <div class="card mb-3">
                        <div class="card-header">
                            <strong>Announcements</strong>
                        </div>
                        <div class="list-group list-group-flush">
                            <div class="list-group-item">
                                <div class="fw-semibold">Campus Closed</div>
                                <small class="text-muted">Oct 01, 2025 — The campus will be closed for a holiday.</small>
                            </div>
                            <div class="list-group-item">
                                <div class="fw-semibold">New Library Hours</div>
                                <small class="text-muted">Sep 15, 2025 — Extended evening hours.</small>
                            </div>
                            <div class="list-group-item text-center">
                                <a href="#" class="small">View all announcements</a>
                            </div>
                        </div>
                    </div>

                    <div class="card">
                        <div class="card-header">
                            <strong>Recent Grades</strong>
                        </div>
                        <div class="card-body">
                            <ul class="list-unstyled mb-0">
                                <li class="mb-2">
                                    <div class="d-flex justify-content-between">
                                        <div>Biology Quiz 3</div>
                                        <div class="text-success">A</div>
                                    </div>
                                </li>
                                <li class="mb-2">
                                    <div class="d-flex justify-content-between">
                                        <div>Computer Lab</div>
                                        <div class="text-success">A-</div>
                                    </div>
                                </li>
                                <li class="text-muted small">Full grade report available on the Grades page.</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Right sidebar -->
        <div class="col-12 col-lg-3">
            <div class="card mb-3">
                <div class="card-body text-center">
                    <div class="mb-2">
                        <div class="rounded-circle bg-primary text-white d-inline-flex align-items-center justify-content-center" style="width:64px;height:64px;font-size:24px;">
                            S
                        </div>
                    </div>
                    <h5 class="mb-0">Student Name</h5>
                    <small class="text-muted">Year • Major</small>
                    <div class="mt-3">
                        <a href="#" class="btn btn-sm btn-outline-primary">Profile</a>
                        <a href="#" class="btn btn-sm btn-outline-secondary">Settings</a>
                    </div>
                </div>
            </div>
            <div class="card">
                <div class="card-header">
                    <strong>Calendar</strong>
                </div>
                <div class="card-body">
                    <div class="border rounded p-3 text-center text-muted" style="min-height:160px;">
                        Calendar widget placeholder
                        <div class="small mt-2">Integrate a calendar component here.</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>