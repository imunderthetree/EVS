@page
@model EVS.Pages.Student.MessagesModel
@{
    ViewData["Title"] = "Messages";
}
<style>
    body {
        background: #f5f5f5;
        font-family: Arial, sans-serif;
    }

    .chat-container {
        display: flex;
        justify-content: space-between;
        gap: 20px;
        margin-top: 40px;
    }

    .chat-box {
        background-color: white;
        border-radius: 10px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        width: 48%;
        height: 500px;
        display: flex;
        flex-direction: column;
    }

    .chat-header {
        background-color: #007bff;
        color: white;
        padding: 10px;
        border-radius: 10px 10px 0 0;
        font-weight: bold;
    }

    .chat-body {
        overflow-y: auto;
        padding: 10px;
        flex-grow: 1;
    }

    .chat-list {
        list-style-type: none;
        padding: 0;
        margin: 0;
    }

    .chat-item {
        display: flex;
        margin-bottom: 15px;
        align-items: flex-start;
    }

        .chat-item.in {
            justify-content: flex-start;
        }

        .chat-item.out {
            justify-content: flex-end;
        }

    .chat-img {
        border-radius: 50%;
        width: 40px;
        height: 40px;
        margin-right: 10px;
    }

        .chat-img img {
            width: 100%;
            height: 100%;
            border-radius: 50%;
        }

    .chat-message {
        max-width: 70%;
        padding: 10px;
        border-radius: 12px;
        font-size: 14px;
        line-height: 1.4;
    }

    .chat-item.in .chat-message {
        background-color: #e0f7fa;
        color: #00796b;
    }

    .chat-item.out .chat-message {
        background-color: #ffebee;
        color: #d32f2f;
    }

    .chat-item .time-stamp {
        font-size: 0.8rem;
        color: #888;
        margin-top: 5px;
    }

    .message-input-area {
        display: flex;
        padding: 10px;
        background-color: #f5f5f5;
        border-radius: 0 0 10px 10px;
    }

    .message-input {
        flex-grow: 1;
        border: none;
        padding: 10px;
        border-radius: 20px;
        background-color: #ffffff;
        font-size: 14px;
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
    }

    .send-button {
        background-color: #007bff;
        color: white;
        border: none;
        padding: 10px;
        margin-left: 10px;
        border-radius: 50%;
        cursor: pointer;
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
    }
</style>

<div class="container chat-container">
    <!-- Left Chat Box -->
    <div class="chat-box">
        <div class="chat-header">Teacher Chat</div>
        <div class="chat-body">
            <ul class="chat-list">
                <li class="chat-item in">
                    <div class="chat-img">
                        <img src="" alt="User">
                    </div>

                    <div class="chat-message">
                        <h5>Mrs. Smith</h5>
                        <p>Don't forget about the upcoming test on Monday!</p>
                        <div class="time-stamp">10:15 AM</div>
                    </div>
                </li>
                <li class="chat-item out">
                    <div class="chat-img">
                        <img src="https://bootdey.com/img/Content/avatar/avatar2.png" alt="User">
                    </div>
                    <div class="chat-message">
                        <h5>You</h5>
                        <p>Got it! I’ll review the material today.</p>
                        <div class="time-stamp">10:16 AM</div>
                    </div>
                </li>
            </ul>
        </div>
        <!-- Input Area for New Message -->
        <div class="message-input-area">
            <input class="message-input" type="text" placeholder="Type a message..." />
            <button class="send-button">
                <i class="fa fa-paper-plane"></i>
            </button>
        </div>
    </div>

    <!-- Right Chat Box -->
    <div class="chat-box">
        <div class="chat-header">Classmates</div>
        <div class="chat-body">
            <ul class="chat-list">
                <li class="chat-item in">
                    <div class="chat-img">
                        <img src="https://bootdey.com/img/Content/avatar/avatar3.png" alt="User">
                    </div>
                    <div class="chat-message">
                        <h5>Johnathan</h5>
                        <p>Hey, are you ready for the math exam?</p>
                        <div class="time-stamp">10:18 AM</div>
                    </div>
                </li>
                <li class="chat-item out">
                    <div class="chat-img">
                        <img src="https://bootdey.com/img/Content/avatar/avatar4.png" alt="User">
                    </div>
                    <div class="chat-message">
                        <h5>You</h5>
                        <p>Almost! Just need to review a few more concepts.</p>
                        <div class="time-stamp">10:19 AM</div>
                    </div>
                </li>
            </ul>
        </div>
        <!-- Input Area for New Message -->
        <div class="message-input-area">
            <input class="message-input" type="text" placeholder="Type a message..." />
            <button class="send-button">
                <i class="fa fa-paper-plane"></i>
            </button>
        </div>
    </div>
</div>
