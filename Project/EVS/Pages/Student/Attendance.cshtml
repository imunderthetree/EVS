@page
@model EVS.Pages.Student.AttendanceModel
@{
    ViewData["Title"] = "Attendance";
}
@section Sidebar {
    @await Html.PartialAsync("_StudentSidebar")
}
<h2>Attendance Records</h2>
@if (Model.Records != null && Model.Records.Rows.Count > 0)
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Date</th>
                <th>Class</th>
                <th>Status</th>
                <th>Justification</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (System.Data.DataRow r in Model.Records.Rows)
            {
                <tr>
                    <td>@(((DateTime)r["Date"]).ToString("d"))</td>
                    <td>@r["ClassName"]</td>
                    <td>@r["Status"]</td>
                    <td>@r["Justification"]</td>
                    <td>
                        @if (r["Status"].ToString() == "Absent" && string.IsNullOrWhiteSpace(r["Justification"].ToString()))
                        {
                            <form method="post" asp-page-handler="Justify" style="display:inline;">
                                <input type="hidden" name="JustifyId" value="@r["Id"]" />
                                <input type="text" name="Justification" placeholder="Enter justification..." required />
                                <button type="submit" class="btn btn-sm btn-outline-primary">Submit</button>
                            </form>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <h4>Summary by Class</h4>
    <table class="table table-sm table-bordered">
        <thead>
            <tr>
                <th>Class</th>
                <th>Present</th>
                <th>Absent</th>
                <th>Late</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var s in Model.Summary)
            {
                <tr>
                    <td>@s.Key</td>
                    <td>@s.Value</td> 
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div>No attendance records found.</div>
}