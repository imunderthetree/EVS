@page
@model EVS.Pages.Student.AttendanceModel
@{
    ViewData["Title"] = "Attendance";
}
@section Sidebar {
    @await Html.PartialAsync("_StudentSidebar")
}
<h2>Attendance Records</h2>
@if (Model.Records != null && Model.Records.Count > 0)
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Date</th>
                <th>Class</th>
                <th>Status</th>
                <th>Justification</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var r in Model.Records)
            {
                <tr>
                    <td>@r.Date.ToShortDateString()</td>
                    <td>@r.ClassName</td>
                    <td>@r.Status</td>
                    <td>@r.Justification</td>
                    <td>
                        @if (r.Status == "Absent" && string.IsNullOrWhiteSpace(r.Justification))
                        {
                            <form method="post" asp-page-handler="Justify" style="display:inline;">
                                <input type="hidden" name="JustifyId" value="@r.Id" />
                                <input type="text" name="Justification" placeholder="Enter justification..." required />
                                <button type="submit" class="btn btn-sm btn-outline-primary">Submit</button>
                            </form>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <h4>Summary by Class</h4>
    <table class="table table-sm table-bordered">
        <thead>
            <tr>
                <th>Class</th>
                <th>Present</th>
                <th>Absent</th>
                <th>Late</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var s in Model.Summary)
            {
                <tr>
                    <td>@s.Key</td>
                    <td>@s.Value.Present</td>
                    <td>@s.Value.Absent</td>
                    <td>@s.Value.Late</td>
                    <td>@s.Value.Total</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div>No attendance records found.</div>
}