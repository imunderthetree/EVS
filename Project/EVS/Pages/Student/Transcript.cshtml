                </tr>
                <tr>
                    <td>English IV</td>
                    <td>1.0</td>
                    <td>A</td>
                    <td>Government</td>
                    <td>1.0</td>
                    <td>B</td>
                </tr>
            </tbody>
        </table>

        <!-- ACADEMIC SUMMARY -->
        <div class="section-title">Academic Summary</div>

        <table>
            <thead>
                <tr>
                    <th>Year</th>
                    <th>Yearly GPA</th>
                    <th>Cumulative GPA</th>
                    <th>Credits Earned</th>
                </tr>
            </thead>
            <tbody>
                <tr><td>9th</td><td>3.45</td><td>3.45</td><td>6.0</td></tr>
                <tr><td>10th</td><td>3.30</td><td>3.38</td><td>7.0</td></tr>
