@page
@model EVS.Pages.Admin.ReportsModel
@{
    ViewData["Title"] = "Reports";
    Layout = "_Layout";
}

@section Sidebar {
    @await Html.PartialAsync("_AdminSidebar")
}

<div class="container-fluid">
    <h2 class="mb-4">Reports</h2>

    <div class="row">
        <div class="col-md-8">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-white fw-bold">Available Reports</div>
                <div class="card-body">
                    <p class="text-muted">Sample UI — generate or download reports.</p>

                    <ul class="list-group">
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            Enrollment Summary
                            <button class="btn btn-sm btn-outline-secondary">Download</button>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            Grade Distribution
                            <button class="btn btn-sm btn-outline-secondary">View</button>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-white fw-bold">Report Options</div>
                <div class="card-body">
                    <div class="mb-2">
                        <label class="form-label">Date range</label>
                        <input type="date" class="form-control mb-2" />
                        <input type="date" class="form-control" />
                    </div>
                    <button class="btn btn-primary w-100">Generate</button>
                </div>
            </div>
        </div>
    </div>
</div>