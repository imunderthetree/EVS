@page
@model EVS.Pages.Admin.ReportsModel
@{
    ViewData["Title"] = "Reports";
    Layout = "_Layout";
}

@section Sidebar {
    @await Html.PartialAsync("_AdminSidebar")
}

<div class="container-fluid">
    <h2 class="mb-4">Reports</h2>

    <div class="row">
        <div class="col-md-8">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-white fw-bold">Available Reports</div>
                <div class="card-body">
                    <ul class="list-group">
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <div>
                                <i class="fa fa-users me-2 text-primary"></i>
                                <strong>Enrollment Summary</strong>
                                <div class="text-muted small">Overview of student enrollment by grade
                                </div>
                            </div>
                            <a href="/Admin/Dashboard" class="btn btn-sm btn-outline-primary">View</a>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <div>
                                <i class="fa fa-chart-bar me-2 text-success"></i>
                                <strong>Grade Distribution</strong>
                                <div class="text-muted small">Analysis of grades across subjects</div>
                            </div>
                            <a href="/Admin/ManageExams" class="btn btn-sm btn-outline-primary">View</a>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <div>
                                <i class="fa fa-calendar-check me-2 text-warning"></i>
                                <strong>Attendance Report</strong>
                                <div class="text-muted small">Student attendance statistics</div>
                            </div>
                            <a href="/Admin/Dashboard" class="btn btn-sm btn-outline-primary">View</a>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <div>
                                <i class="fa fa-book me-2 text-info"></i>
                                <strong>Subject Overview</strong>
                                <div class="text-muted small">List of all subjects and assignments</div>
                            </div>
                            <a href="/Admin/ManageSubjects" class="btn btn-sm btn-outline-primary">View</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-white fw-bold">
                    <i class="fa fa-filter me-2"></i>Report Options
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="form-label">From Date</label>
                        <input type="date" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">To Date</label>
                        <input type="date" class="form-control" />
                    </div>
                    <div class="d-grid">
                        <button class="btn btn-primary">
                            <i class="fa fa-file-export me-1"></i> Generate Report
                        </button>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm">
                <div class="card-header bg-white fw-bold">Quick Links</div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a href="/Admin/Dashboard" class="btn btn-outline-secondary">
                            <i class="fa fa-home me-1"></i> Dashboard
                        </a>
                        <a href="/Admin/ManageStudents" class="btn btn-outline-secondary">
                            <i class="fa fa-user-graduate me-1"></i> Manage Students
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>