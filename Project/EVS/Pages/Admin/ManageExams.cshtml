@page
@model EVS.Pages.Admin.ManageExamsModel
@{
    ViewData["Title"] = "Manage Exams";
    Layout = "_Layout";
}

@section Sidebar {
    @await Html.PartialAsync("_AdminSidebar")
}

<div class="container-fluid">
    <h2 class="mb-4">Manage Exams</h2>

    <div class="card shadow-sm">
        <div class="card-header bg-white fw-bold">Exams</div>
        <div class="card-body">
            <p class="text-muted">UI-only: replace with real data when ready.</p>

            <div class="table-responsive">
                <table class="table table-sm">
                    <thead>
                        <tr>
                            <th>Exam</th>
                            <th>Subject</th>
                            <th>Date</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Midterm 1</td>
                            <td>Mathematics</td>
                            <td>2026-02-10</td>
                            <td class="text-end">
                                <button class="btn btn-sm btn-outline-primary">Edit</button>
                                <button class="btn btn-sm btn-outline-danger">Delete</button>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <div class="mt-3">
                <button class="btn btn-primary">Create Exam (placeholder)</button>
            </div>
        </div>
    </div>
</div>