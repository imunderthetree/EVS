@page
@model EVS.Pages.Admin.ManageStudentsModel
@{
    ViewData["Title"] = "Manage Students";
    Layout = "_Layout";
}

@section Sidebar {
    @await Html.PartialAsync("_AdminSidebar")
}

<div class="container-fluid">
    <h2 class="mb-4">Manage Students</h2>

    <div class="row">
        <div class="col-md-9">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-white fw-bold">Student List</div>
                <div class="card-body">
                    <p class="text-muted">Sample UI — replace with real data.</p>

                    <div class="mb-3 row">
                        <div class="col-md-4">
                            <input class="form-control" placeholder="Search by name or ID" />
                        </div>
                        <div class="col-md-3">
                            <select class="form-select">
                                <option>All Grades</option>
                                <option>Grade 9</option>
                                <option>Grade 10</option>
                            </select>
                        </div>
                        <div class="col-md-5 text-end">
                            <button class="btn btn-outline-secondary">Export</button>
                        </div>
                    </div>

                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>Student</th>
                                <th>Class</th>
                                <th>Guardian</th>
                                <th class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Mary Johnson</td>
                                <td>10A</td>
                                <td>Mrs. Johnson</td>
                                <td class="text-end">
                                    <button class="btn btn-sm btn-outline-primary me-2">View</button>
                                    <button class="btn btn-sm btn-outline-danger">Remove</button>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow-sm">
                <div class="card-header bg-white fw-bold">Quick Actions</div>
                <div class="card-body">
                    <button class="btn btn-outline-primary w-100 mb-2">Add Student</button>
                    <button class="btn btn-outline-secondary w-100 mb-2">Bulk Import</button>
                    <button class="btn btn-outline-secondary w-100">Manage Promotions</button>
                </div>
            </div>
        </div>
    </div>
</div>
