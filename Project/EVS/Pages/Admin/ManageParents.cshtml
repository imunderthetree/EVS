@page
@model EVS.Pages.Admin.ManageParentsModel
@{
    ViewData["Title"] = "Manage Parents";
    Layout = "_Layout";
}

@section Sidebar {
    @await Html.PartialAsync("_AdminSidebar")
}

<div class="container-fluid">
    <h2 class="mb-4">Manage Parents</h2>
        
    <div class="row">
        <div class="col-md-12">
            <div class="card shadow-sm">
                <div class="card-header bg-white fw-bold d-flex justify-content-between align-items-center">
                    <span>Parent Contacts</span>
                    <span class="badge bg-primary">@Model.Parents.Rows.Count total</span>
                </div>
                <div class="card-body">
                    @if (Model.Parents.Rows.Count > 0)
                    {
                        <div class="table-responsive">
                            <table class="table table-hover table-sm align-middle">
                                <thead>
                                    <tr>
                                        <th>Parent</th>
                                        <th>Email</th>
                                        <th>Phone</th>
                                        <th>Students</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (System.Data.DataRow parent in Model.Parents.Rows)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="rounded-circle bg-info d-flex align-items-center justify-content-center me-2" 
                                                         style="width: 36px; height: 36px;">
                                                        <i class="fa fa-user-friends text-white"></i>
                                                    </div>
                                                    <div>
                                                        <div class="fw-semibold">@parent["FullName"]</div>
                                                        <div class="text-muted small">ID: @parent["ParentID"]</div>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>@(parent["Email"] != DBNull.Value ? parent["Email"] : "—")</td>
                                            <td>@(parent["PhoneNumber"] != DBNull.Value ? parent["PhoneNumber"] : "—")</td>
                                            <td>
                                                @if (parent["Students"] != DBNull.Value && !string.IsNullOrEmpty(parent["Students"].ToString()))
                                                {
                                                    <span class="badge bg-secondary">@parent["Students"]</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">No students linked</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center text-muted py-5">
                            <i class="fa fa-user-friends fa-3x mb-3 opacity-50"></i>
                            <p>No parents registered yet.</p>
                            <p class="small">Parents can register through the registration page.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>