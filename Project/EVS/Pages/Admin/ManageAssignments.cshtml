@page
@model EVS.Pages.Admin.ManageAssignmentsModel
@{
    ViewData["Title"] = "Manage Assignments";
    Layout = "_Layout";
}

@section Sidebar {
    @await Html.PartialAsync("_AdminSidebar")
}

<div class="container-fluid">
    <h2 class="mb-4">Manage Assignments</h2>

    @if (!string.IsNullOrEmpty(Model.Message))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @Model.Message
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row">
        <div class="col-md-8">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-white fw-bold d-flex justify-content-between align-items-center">
                    <span>Existing Assignments</span>
                    <span class="badge bg-primary">@Model.Assignments.Rows.Count total</span>
                </div>
                <div class="card-body">
                    @if (Model.Assignments.Rows.Count > 0)
                    {
                        <div class="table-responsive">
                            <table class="table table-hover table-sm align-middle">
                                <thead>
                                    <tr>
                                        <th>Title</th>
                                        <th>Subject</th>
                                        <th>Total Grade</th>
                                        <th>Due Date</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (System.Data.DataRow assignment in Model.Assignments.Rows)
                                    {
                                        var dueDate = assignment["DueDate"] != DBNull.Value 
                                            ? Convert.ToDateTime(assignment["DueDate"]) 
                                            : (DateTime?)null;
                                        var isPast = dueDate.HasValue && dueDate.Value < DateTime.Today;
                                        
                                        <tr>
                                            <td>
                                                <i class="fa fa-file-alt me-2 text-primary"></i>
                                                @assignment["Title"]
                                            </td>
                                            <td>@assignment["SubjectName"]</td>
                                            <td>
                                                <span class="badge bg-info">@assignment["TotalGrade"] pts</span>
                                            </td>
                                            <td>
                                                @if (dueDate.HasValue)
                                                {
                                                    <span class="@(isPast ? "text-muted" : "")">
                                                        @dueDate.Value.ToString("MMM dd, yyyy")
                                                    </span>
                                                    @if (isPast)
                                                    {
                                                        <span class="badge bg-secondary ms-1">Past</span>
                                                    }
                                                }
                                                else
                                                {
                                                    <span class="text-muted">—</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center text-muted py-4">
                            <i class="fa fa-file-alt fa-3x mb-3 opacity-50"></i>
                            <p>No assignments found. Create your first assignment using the form.</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-white fw-bold">
                    <i class="fa fa-plus me-2"></i>Add Assignment
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="mb-3">
                            <label asp-for="Title" class="form-label">Title</label>
                            <input asp-for="Title" class="form-control" placeholder="Assignment title" required />
                        </div>

                        <div class="mb-3">
                            <label asp-for="SubjectId" class="form-label">Subject</label>
                            <select asp-for="SubjectId" class="form-select" required>
                                <option value="">-- Select Subject --</option>
                                @foreach (System.Data.DataRow subject in Model.Subjects.Rows)
                                {
                                    <option value="@subject["SubjectID"]">@subject["SubjectName"]</option>
                                }
                            </select>
                        </div>

                        <div class="mb-3">
                            <label asp-for="TotalGrade" class="form-label">Total Grade</label>
                            <input asp-for="TotalGrade" type="number" step="0.01" min="1" 
                                   class="form-control" placeholder="e.g. 100" required />
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">
                                <i class="fa fa-plus me-1"></i> Add Assignment
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="card shadow-sm">
                <div class="card-header bg-white fw-bold">Quick Filters</div>
                <div class="card-body">
                    <div class="mb-2">
                        <label class="form-label">Subject</label>
                        <select class="form-select">
                            <option>All</option>
                            <option>Mathematics</option>
                            <option>Biology</option>
                            <option>English</option>
                        </select>
                    </div>

                    <div class="mb-2">
                        <label class="form-label">Due</label>
                        <select class="form-select">
                            <option>All</option>
                            <option>Next 7 days</option>
                            <option>Next 30 days</option>
                        </select>
                    </div>

                    <button type="button" class="btn btn-outline-secondary btn-sm">Apply</button>
                </div>
            </div>
        </div>
    </div>
</div>