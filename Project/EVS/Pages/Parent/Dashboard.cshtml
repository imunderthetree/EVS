@page
@model EVS.Pages.Parent.DashboardModel
@{
    ViewData["Title"] = "Parent Dashboard";
    Layout = "_Layout";
}

@section Sidebar {
    @await Html.PartialAsync("_ParentSidebar")
}

<div class="container-fluid">
    <h2 class="mb-4">Welcome, @Model.ParentName</h2>

    <div class="row g-3 mb-4">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-white fw-bold">My Children</div>
                <div class="card-body">
                    @if (Model.Children.Rows.Count > 0)
                    {
                        <div class="row">
                            @foreach (System.Data.DataRow child in Model.Children.Rows)
                            {
                                <div class="col-sm-6 mb-3">
                                    <div class="card border-0 bg-light">
                                        <div class="card-body">
                                            <h5 class="card-title">@child["FullName"]</h5>
                                            <p class="card-text text-muted mb-1">Grade: @child["GradeLevel"]</p>
                                            <p class="text-muted small">Student ID: @child["StudentID"]</p>
                                            <a class="btn btn-sm btn-outline-primary me-2"
                                               href="/Parent/StudentInfo?StudentId=@child["StudentID"]">View Profile</a>
                                            <a class="btn btn-sm btn-outline-secondary"
                                               href="/Parent/Transcript?StudentId=@child["StudentID"]">Transcript</a>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">No children registered under your account.</p>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm mb-3">
                <div class="card-header bg-white fw-bold">Quick Actions</div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a class="btn btn-primary" href="/Parent/Messages">Messages</a>
                        <a class="btn btn-outline-primary" href="/Parent/Announcements">Announcements</a>
                        <a class="btn btn-outline-secondary" href="/Parent/Reports">Reports</a>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm">
                <div class="card-header bg-white fw-bold">Children Summary</div>
                <div class="card-body">
                    <p class="mb-1"><strong>Total Children:</strong> @Model.Children.Rows.Count</p>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-white fw-bold">Recent Announcements</div>
        <div class="card-body">
            @if (Model.RecentAnnouncements.Rows.Count > 0)
            {
                @foreach (System.Data.DataRow ann in Model.RecentAnnouncements.Rows)
                {
                    <div class="mb-3">
                        <h6 class="mb-1">@ann["Title"]</h6>
                        <p class="text-muted small mb-0">
                            @ann["Content"]?.ToString()?.Substring(0, Math.Min(100, ann["Content"].ToString()!.Length))...
                        </p>
                        <small class="text-muted">@Convert.ToDateTime(ann["DatePosted"]).ToString("MMM dd, yyyy")</small>
                    </div>
                }
            }
            else
            {
                <p class="text-muted">No announcements available.</p>
            }
        </div>
    </div>
</div>