@page
@model EVS.Pages.Parent.MessagesModel
@{
    ViewData["Title"] = "Messages";
    Layout = "_Layout";
    var parentId = HttpContext.Session.GetInt32("ParentId") ?? 0;
}

@section Sidebar {
    @await Html.PartialAsync("_ParentSidebar")
}

<style>
    .message-list {
        background: #fff;
        border: 1px solid #e2e2e2;
        border-radius: 8px;
    }

    .message-item {
        padding: 15px;
        border-bottom: 1px solid #f0f0f0;
    }

    .message-item:last-child {
        border-bottom: none;
    }

    .message-item.sent {
        background: #f0f7ff;
    }

    .message-item.received {
        background: #fff;
    }

    .message-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 8px;
    }

    .message-sender {
        font-weight: 600;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .message-avatar {
        width: 36px;
        height: 36px;
        border-radius: 50%;
        background: #6c757d;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
    }

    .message-time {
        font-size: 12px;
        color: #999;
    }

    .message-content {
        color: #333;
        line-height: 1.5;
    }

    .compose-card {
        position: sticky;
        top: 20px;
    }
</style>

<div class="container-fluid">
    <h2 class="mb-4">Messages</h2>

    <div class="row">
        <!-- Messages List -->
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-white fw-bold d-flex justify-content-between align-items-center">
                    <span>Message History</span>
                    <span class="badge bg-primary">@Model.Messages.Rows.Count messages</span>
                </div>
                <div class="card-body p-0">
                    @if (Model.Messages.Rows.Count > 0)
                    {
                        <div class="message-list">
                            @foreach (System.Data.DataRow msg in Model.Messages.Rows)
                            {
                                var isSent = Convert.ToInt32(msg["SenderID"]) == parentId;
                                var messageClass = isSent ? "sent" : "received";
                                var senderLabel = isSent ? "You" : "User #" + msg["SenderID"];
                                var sentDate = Convert.ToDateTime(msg["SentDate"]);
                                
                                <div class="message-item @messageClass">
                                    <div class="message-header">
                                        <div class="message-sender">
                                            <div class="message-avatar">
                                                <i class="fa fa-user"></i>
                                            </div>
                                            <span>@senderLabel</span>
                                            @if (isSent)
                                            {
                                                <span class="badge bg-info">Sent</span>
                                            }
                                        </div>
                                        <div class="message-time">
                                            @sentDate.ToString("MMM dd, yyyy") at @sentDate.ToString("hh:mm tt")
                                        </div>
                                    </div>
                                    <div class="message-content">
                                        @msg["MessageContent"]
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center text-muted py-5">
                            <i class="fa fa-envelope fa-3x mb-3 opacity-50"></i>
                            <p>No messages yet.</p>
                            <p class="small">Use the form to send a message to a teacher.</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Compose Message -->
        <div class="col-md-4">
            <div class="card shadow-sm compose-card">
                <div class="card-header bg-white fw-bold">
                    <i class="fa fa-paper-plane me-2"></i>Send Message
                </div>
                <div class="card-body">
                    <form method="post" asp-page-handler="Send">
                        <div class="mb-3">
                            <label class="form-label">To (User ID)</label>
                            <input type="number" asp-for="ReceiverId" class="form-control" 
                                   placeholder="Enter recipient ID" required min="1" />
                            <div class="form-text">Enter the ID of the teacher or staff member.</div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Message</label>
                            <textarea asp-for="MessageContent" class="form-control" rows="5" 
                                      placeholder="Type your message here..." required></textarea>
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">
                                <i class="fa fa-paper-plane me-1"></i> Send Message
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>