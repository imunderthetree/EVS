@page
@using System.Data
@using System.Linq
@model EVS.Pages.Parent.TranscriptModel
@{
    ViewData["Title"] = "Transcript";
    Layout = "_Layout";
}

@section Sidebar {
    @await Html.PartialAsync("_ParentSidebar")
}

<div class="container-fluid">
    <h2 class="mb-4">Student Transcript</h2>

    <div class="row mb-3">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body d-flex align-items-center gap-3">
                    <label class="mb-0 fw-semibold">Select child:</label>
                    <form method="get" class="d-flex gap-2">
                        <select name="StudentId" class="form-select" onchange="this.form.submit()">
                            <option value="">-- Select --</option>
                            @if (Model.Children.Rows.Count > 0)
                            {
                                @foreach (System.Data.DataRow child in Model.Children.Rows)
                                {
                                    var isSelected = Convert.ToInt32(child["StudentID"]) == Model.StudentId;
                                    if (isSelected)
                                    {
                                        <option value="@child["StudentID"]" selected>@child["FullName"]</option>
                                    }
                                    else
                                    {
                                        <option value="@child["StudentID"]">@child["FullName"]</option>
                                    }
                                }
                            }
                        </select>
                    </form>

                    @if (Model.StudentId > 0)
                    {
                        <div class="ms-auto d-flex gap-2">
                            <button class="btn btn-primary btn-sm" onclick="window.print()">Print</button>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-4 d-flex align-items-stretch">
            <div class="card shadow-sm w-100">
                <div class="card-header bg-white fw-bold">Summary</div>
                <div class="card-body">
                    @if (Model.StudentId > 0 && Model.Children.Rows.Count > 0)
                    {
                        var selectedChild = Model.Children.AsEnumerable()
                            .FirstOrDefault(r => Convert.ToInt32(r["StudentID"]) == Model.StudentId);
                        if (selectedChild != null)
                        {
                            <p class="mb-1"><strong>Student:</strong> @selectedChild["FullName"]</p>
                            <p class="mb-1"><strong>Grade:</strong> @selectedChild["GradeLevel"]</p>
                        }
                        <hr />
                        <div class="d-flex justify-content-between">
                            <div>
                                <small class="text-muted">Average Grade</small>
                                <div class="fw-bold">@Model.CumulativeGPA.ToString("F2")</div>
                            </div>
                            <div>
                                <small class="text-muted">Total Grades</small>
                                <div class="fw-bold">@Model.Grades.Rows.Count</div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">Select a child to view transcript</p>
                    }
                </div>
            </div>
        </div>
    </div>

    @if (Model.StudentId > 0)
    {
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-white fw-bold">Academic Record</div>
            <div class="card-body">
                @if (Model.Grades.Rows.Count > 0)
                {
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th>Subject</th>
                                    <th>Assignment</th>
                                    <th class="text-center">Grade</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (System.Data.DataRow grade in Model.Grades.Rows)
                                {
                                    <tr>
                                        <td>@grade["SubjectName"]</td>
                                        <td>@grade["AssignmentTitle"]</td>
                                        <td class="text-center">
                                            @(grade["Grade"] != DBNull.Value ? grade["Grade"] : "Not Graded")
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <p class="text-muted">No grades recorded for this student</p>
                }
            </div>
        </div>
    }
</div>
