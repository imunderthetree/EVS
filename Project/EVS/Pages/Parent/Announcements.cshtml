@page
@model EVS.Pages.Parent.AnnouncementsModel
@{
    ViewData["Title"] = "Announcements";
    Layout = "_Layout";
}

@section Sidebar {
    @await Html.PartialAsync("_ParentSidebar")
}

<div class="container-fluid">
    <h2 class="mb-4">Announcements</h2>

    @if (Model.Announcements.Rows.Count > 0)
    {
        <div class="list-group">
            @foreach (System.Data.DataRow announcement in Model.Announcements.Rows)
            {
                var postDate = announcement["DatePosted"] != DBNull.Value 
                    ? Convert.ToDateTime(announcement["DatePosted"]) 
                    : DateTime.Today;
                    
                <div class="list-group-item mb-2">
                    <div class="d-flex w-100 justify-content-between">
                        <h6 class="mb-1">@announcement["Title"]</h6>
                        <small class="text-muted">@postDate.ToString("MMM dd, yyyy")</small>
                    </div>
                    <p class="mb-1 text-muted">@announcement["Content"]</p>
                    <small class="text-muted">Posted by: Administration</small>
                </div>
            }
        </div>
    }
    else
    {
        <div class="card shadow-sm">
            <div class="card-body text-center text-muted py-5">
                <i class="fa fa-bullhorn fa-3x mb-3 opacity-50"></i>
                <p>No announcements at this time.</p>
                <p class="small">Check back later for updates from the school.</p>
            </div>
        </div>
    }
</div>
