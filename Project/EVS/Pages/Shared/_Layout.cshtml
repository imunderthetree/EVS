@{
    Layout = null;
    // Check if any user type is logged in
    var adminId = Context.Session.GetInt32("AdminId");
    var teacherId = Context.Session.GetInt32("TeacherId");
    var studentId = Context.Session.GetInt32("StudentId");
    var parentId = Context.Session.GetInt32("ParentId");
    
    var isAuthenticated = adminId.HasValue || teacherId.HasValue || studentId.HasValue || parentId.HasValue;
    var userName = Context.Session.GetString("AdminName") 
                   ?? Context.Session.GetString("TeacherName")
                   ?? Context.Session.GetString("StudentName")
                   ?? Context.Session.GetString("ParentName")
                   ?? "User";
    var accountType = Context.Session.GetString("AccountType") ?? "User";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EVS</title>

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <style>
        body {
            background-color: #f8f9fa;
            overflow-x: hidden;
        }

        /* Sidebar */
        .sidebar {
            width: 250px;
            min-height: 100vh;
            background: #343a40;
            color: white;
            position: fixed;
            top: 0;
            left: 0;
            padding-top: 20px;
            z-index: 1050; /* ensure sidebar sits above page content */
        }

            .sidebar a {
                color: #ddd;
                text-decoration: none;
                padding: 12px 20px;
                display: block;
                font-size: 15px;
            }

                .sidebar a:hover {
                    background: #495057;
                    color: white;
                }

        /* Main content (shifted to the right because of sidebar) */
        .content-area {
            margin-left: 250px;
            padding: 25px;
            position: relative; /* keep content in its own stacking context */
            z-index: 1;
        }

        /* Navbar always on top */
        .navbar {
            z-index: 1100;
        }

        .user-info {
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .account-badge {
            font-size: 11px;
            padding: 2px 8px;
            border-radius: 12px;
        }
    </style>
</head>
<body>

    <!-- Top Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark px-4">
        <a class="navbar-brand fw-bold" asp-page="/Welcome" aria-label="EVS Home">EVS</a>
            
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarMain" aria-controls="navbarMain"
                aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarMain">
            <ul class="navbar-nav ms-auto">
                @if (isAuthenticated)
                {
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle user-info" href="#" id="userDropdown" 
                           role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fa-solid fa-user-circle fa-lg"></i>
                            <span>@userName</span>
                            <span class="badge account-badge bg-info">@accountType</span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                            <li><a class="dropdown-item" asp-page="/Account/ChangePassword">
                                <i class="fa-solid fa-key me-2"></i>Change Password
                            </a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" asp-page="/Account/Logout">
                                <i class="fa-solid fa-arrow-right-from-bracket me-2"></i>Logout
                            </a></li>
                        </ul>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a href="/Account/Login" class="btn btn-outline-light btn-sm">
                            <i class="fa-solid fa-arrow-right-to-bracket"></i> Login
                        </a>
                    </li>
                }
            </ul>
        </div>
    </nav>

    <!-- Sidebar (Inserted from Razor Pages using Section) -->
    <div>
        @RenderSection("Sidebar", required: false)
    </div>

    <!-- Main Content Area -->
    <div class="content-area">
        <main role="main" class="pb-5">
            @RenderBody()
        </main>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Render optional page scripts (validation scripts, per-page script blocks, etc.) -->
    @RenderSection("Scripts", required: false)
</body>
</html>
